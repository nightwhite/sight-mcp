{
  "name": "sight-mcp",
  "version": "1.0.0",
  "description": "MCP server for AI-powered image and video analysis - supports OpenAI, Claude, and multimodal vision APIs with local file and URL processing",
  "module": "index.ts",
  "type": "module",
  "private": false,
  "bin": {
    "sight-mcp": "./dist/sight-mcp"
  },
  "files": [
    "dist/**",
    "src/**",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "bun build --target node --outfile dist/index.js index.ts && echo '#!/usr/bin/env node' > dist/sight-mcp && echo 'import(\"./index.js\");' >> dist/sight-mcp",
    "build:binary": "mkdir -p dist && bun build --compile --outfile=dist/$npm_package_name index.ts",
    "show-package-name": "echo $npm_package_name",
    "start": "bun run index.ts",
    "dev": "bun --watch index.ts",
    "prepublishOnly": "bun run build",
    "test": "bun test",
    "test:integration": "bun test test/integration/",
    "test:watch": "bun test --watch"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "zod": "^3.22.0",
    "dotenv": "^16.4.5"
  },
  "keywords": [
    "mcp",
    "ai",
    "vision",
    "image-analysis",
    "video-analysis",
    "openai",
    "claude",
    "anthropic",
    "multimodal",
    "gpt-4",
    "gpt-4o",
    "claude-3-5-sonnet",
    "image-recognition",
    "video-understanding",
    "computer-vision",
    "mcp-server",
    "model-context-protocol",
    "ai-vision",
    "visual-ai",
    "media-analysis"
  ],
  "author": "Your Name",
  "license": "MIT"
}
